<% content_for :title do %>
<%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
<div class="column is-one-third">
<nav class="panel is-link">
<p class="panel-heading">
<%= @entry.meal_type %>
<%= @entry.category.title %>
</p>

<div class="panel-block">
<strong>Calories:&nbsp;</strong> <%= @entry.calories %>
</div>

<div class="panel-block">
<strong>Proteins:&nbsp;</strong> <%= @entry.proteins %>
</div>

<div class="panel-block">
<strong>Carbohydrates:&nbsp;</strong> <%= @entry.carbohydrates %>
</div>

<div class="panel-block">
<strong>Fats:&nbsp;</strong> <%= @entry.fats %>
</div>

</nav>
<div class="columns is-mobile">
<div class="column">
  <%= link_to "Edit", edit_entry_path(@entry), class: "button is-gray" %>
  <%= link_to "Back", entries_path, class: "button is-gray" %>
  <%= button_to "Delete", {:controller => :entries,
      :action => 'destroy', :id => @entry.id }, :method => :delete, class: "button is-gray"  %>
  </div>
  </div>
  </div>
</div>