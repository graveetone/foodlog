<section class="hero is-link is-small">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <%= link_to root_path, class: "navbar-item" do %>
          <%# <span class="has-text-weight-bold is-size-4 ml-4">Foodlog</span> %>
          <img src="https://iconarchive.com/download/i2262/aha-soft/food/hamburger.ico">
          Foodlog
          <% end %>       
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
          <span class="navbar-item">
          <%= link_to "Create new entry", new_entry_path, class: "button is-success" %>          
          </span>
          <span class="navbar-item">
          <%= link_to "Create new category", new_category_path, class: "button is-success" %>          
          </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-head">
    <div class="container has-text-centered">
      <p class="title">
          <% if content_for(:title)%>
          <%= yield :title%>
          <% else %>
          Foodlog
          <% end %>
<br><br>
      </p>
    </div>
  </div>

  
</section>